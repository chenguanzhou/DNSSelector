<UserControl x:Class="ChangeDNS.DNSBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChangeDNS"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Padding="3" Grid.Row="0" Grid.Column="0" Text="First" />
        <local:IPBox Padding="3" Grid.Row="0" Grid.Column="1"></local:IPBox>
        <TextBlock Padding="3" Grid.Row="1" Grid.Column="0" Text="Second"/>
        <local:IPBox Padding="3" Grid.Row="1" Grid.Column="1"></local:IPBox>
    </Grid>

</UserControl>
